<section class="admin-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-auto" id="organisation">
        <h2>Organisation</h2>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Name</span>
          <input type="text" class="form-control" placeholder="Organisation Name" value="<%= @organisation.name %>" disabled />
          <i class="input-group-text fas fa-edit"></i></span>
        </div>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col">
        <h2>User Management</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Admin</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td>
                  <% if user.admin %>
                    <i class="fas fa-check-circle"></i>
                  <% else %>
                    <i class="fas fa-times-circle"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<%= javascript_pack_tag 'admin_page_functions' %>