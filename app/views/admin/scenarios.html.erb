<section class="admin-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <h1><%= @scenario.name %></h1>
      </div>
    </div>
    <div class="row flex-grow-1">
      <div class="col">
        <% if @scenario.users.length > 0 %>
          <h2>Users</h2>
          <table class="table table-light table-hover">
            <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">No. of Attempts</th>
            </tr>
            </thead>
            <tbody>
            <% @scenario.users.each do |user| %>
              <tr>
                <td>
                  <a href="/admin/scenarios/<%= @scenario.id %>/users/<%= user.id %>">
                    <%= user.first_name %>
                  </a>
                </td>
                <td>
                  <a href="/admin/scenarios/<%= @scenario.id %>/users/<%= user.id %>">
                    <%= user.last_name %>
                  </a>
                </td>
                <td>
                  <a href="/admin/scenarios/<%= @scenario.id %>/users/<%= user.id %>">
                    <%= user.email %>
                  </a>
                </td>
                <td>
                  <a href="/admin/scenarios/<%= @scenario.id %>/users/<%= user.id %>">
                    <%= Attempt.where('scenario_id = ? and user_id = ?', @scenario, user).count %>
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% else %>
          <h2>No users have attempted this scenario</h2>
        <% end %>
      </div>
    </div>
  </div>
</section>