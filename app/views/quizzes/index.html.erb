<nav style="text-align: right">
  <% if user_signed_in? %>
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-sm btn-danger" %>
  <% else %>
    <%= link_to('Login', new_user_session_path) %> |
    <%= link_to('Sign Up', new_user_registration_path) %>
  <% end %>
</nav>

<section class="quiz-header quiz-index">
  <div class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="grey-transparent-bg col-lg-6 col-md-8 mx-auto">

        <h1>Interactive Assessments</h1>
        <h3>Assessment Count: <%= @quizzes.count %></h3>
        <p>This is the interactive assessment homepage. Here you can view all the scenario assessments that are
        available to you. To view your past scores or to see more infomation about an assessment click on view</p>

        <% if current_user.admin? %>
          <p>You can also create a new assessment here or edit an existing assessment below </p>
          <td><%= link_to 'Create New Assessment', new_quiz_path, class: "btn btn-lg btn-success" %></td>
        <% end %>
      </div>

    </div>
  </div>
</section>

<section class="quiz-album album py-5">

  <div class="container">
    <h1>All Assessments</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <% @quizzes.each do |quiz| %>
        <div class="col">
          <div class="card quiz-show-container shadow-sm h-100">
            <div class="card-body">
              <h3 class="text-center"><%= quiz.name %></h3>
              <p><%= quiz.description %></p>
              <p>Number of Attempts: <%= quiz.quiz_attempts.count %></p>
              <p>Available: <%= quiz.available %> </p>
            </div>

            <div class="card-footer  text-center">
              <div class="btn-group">

                <%= link_to 'View', quiz_path(quiz), class: "btn btn-sm btn-info" %>
                <% if current_user.admin? %>
                  <%= link_to 'Edit', edit_quiz_path(quiz), class: "btn btn-sm btn-warning" %>

                <% else %>

                  <!--<button type="button" class="btn btn-sm btn-outline-secondary">Attempt</button>-->
                <% end %>

              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</section>
