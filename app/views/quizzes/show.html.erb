<h1>Quiz</h1>
<h2> <%= @quiz.name %> </h2>
<p> <%= @quiz.description %> </p>

<h3><%= link_to "Start Quiz", quiz_question_path(@quiz, @quiz.questions.find_by(order: 0)) %></h3>

<% if current_user.admin? %>
  <h2>Admin Only View</h2>
  <% @quiz.questions.each do |question| %>
    <h3><%= question.description %></h3>
    <h4><%= question.text %></h4>
    <% question.answers.each do |answer| %>
      <li><%= answer.text %></li>
    <% end %>
  <% end %>
<% end %>