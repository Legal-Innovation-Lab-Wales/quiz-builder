<section class="scenario-header scenario-index">
  <div class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="grey-transparent-bg col-lg-6 col-md-8 mx-auto">

        <h1>Scenarios</h1>
        <h4>Your organisation currently has <%= @scenarios.count %> scenarios</h4>
        <p>This is the interactive scenario homepage. Here you can view all the scenarios that are
          available to you. To view your past scores or to see more information about an scenario click the view
          button</p>

        <% if current_user.admin? %>
          <p>You can also create a new scenario here or edit an existing scenario below </p>
          <td><%= link_to 'Create New Scenario', new_scenario_path, class: "btn btn-lg btn-success" %></td>
        <% end %>
      </div>

    </div>
  </div>
</section>

<section class="scenario-album album py-5">

  <div class="container">
    <h1 class="text-center">All Scenarios</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <% @scenarios.each do |scenario| %>
        <div class="col">
          <div class="card scenario-show-container shadow-sm h-100">
            <div class="card-body">
              <h3 class="text-center"><%= scenario.name %></h3>
              <p><%= scenario.description %></p>

            </div>

            <div class="card-footer  text-center">
              <% if current_user.admin? %>
                <p>Number of Attempts: <%= scenario.attempts.count %></p>
                <p>Available: <%= scenario.available %> </p>
              <% end %>

              <div class="btn-group">

                <%= link_to 'View', scenario_path(scenario), class: "btn btn-sm btn-info" %>
                <% if current_user.admin? %>
                  <%= link_to 'Edit', edit_scenario_path(scenario), class: "btn btn-sm btn-warning" %>

                <% else %>

                  <!--<button type="button" class="btn btn-sm btn-outline-secondary">Attempt</button>-->
                <% end %>

              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</section>
