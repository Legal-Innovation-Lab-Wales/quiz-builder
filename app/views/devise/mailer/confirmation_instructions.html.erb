<div id="email-wrapper">
  <div id="header">
    <table>
      <tbody>
      <tr>
        <td>
          <h3>Welcome <%= @email %>!</h3>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
  <div id="body">
    You can confirm your account with this link:
    <%= link_to 'Confirm my account', confirmation_url(@resource, confirmation_token: @token) %>
  </div>
</div>