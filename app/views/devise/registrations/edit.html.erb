<section id="cover" class="min-vh-100">
  <div class="sp-form">

    <div class="row">
      <div class="col-xl-8 col-lg-6 col-md-8 col-sm-11 mx-auto text-center form p-4">
        <h1 class="text-white">Edit <%= resource_name.to_s.humanize %></h1>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <div class="form-group">
          <%= render "devise/shared/error_messages", resource: resource %>
          <p class="text-danger">
            <% if flash[:alert] %>
              <%= flash[:alert] %>
            <% end %>
          </p>
        </div>

        <div class="row g-2 mb-2">
          <div class="col-md">
            <div class="form-floating">
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', autocomplete: "First Name", placeholder: "First Name" %>
              <%= f.label :first_name %>
            </div>
          </div>

          <div class="col-md">
            <div class="form-floating">
              <%= f.text_field :last_name, class: 'form-control', autocomplete: "Last Name", placeholder: "Last Name" %>
              <%= f.label :last_name %>
            </div>
          </div>
        </div>

        <div class="form-floating mb-2">
          <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "Email Address" %>
          <%= f.label :email %>

        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-floating mb-2">
          <%= f.text_area :bio, class: 'form-control', autocomplete: "bio", placeholder: "A little about yourself" %>
          <%= f.label :bio%>
        </div>

        <div class="form-floating mb-2">
          <%= f.text_field :organisation, class: 'form-control', autocomplete: "organisation", placeholder: "Your Organisation" %>
          <%= f.label :organisation %>
        </div>

        <div class="form-floating mb-2">
          <%= f.password_field :password, class: 'form-control', autocomplete: "password", placeholder: "Password (leave blank if you don't want to change it)" %>
          <%= f.label :password, "Password (leave blank if you don't want to change it)" %>
        </div>

        <div class="form-floating mb-2">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "password", placeholder: "Password Again"  %>
          <%= f.label :password_confirmation %>
        </div>

        <div class="form-floating mb-2">
          <%= f.password_field :current_password, class: 'form-control', autocomplete: "password", placeholder: "Password (we need your current password to confirm your changes)" %>
          <%= f.label :current_password, "Current password to confirm your changes" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-secondary mb-2" %>
        </div>
      <% end %>

      <p> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

    </div>
  </div>

</section>
